<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:apps="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        apps:cardElevation="1dp"
        apps:cardCornerRadius="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Farm ID"
                android:textColor="@color/black"
                android:textSize="20sp"
                apps:layout_constraintEnd_toEndOf="parent"
                apps:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                apps:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/farmId" apps:layout_constraintHorizontal_bias="0.024"/>

        <TextView
                android:id="@+id/farmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textStyle="italic"
                tools:text="Farm Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                apps:layout_constraintEnd_toEndOf="parent"
                apps:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" apps:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp"
                apps:layout_constraintTop_toBottomOf="@+id/farmId" apps:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"/>

        <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                apps:layout_constraintEnd_toEndOf="parent"
                apps:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imgFarm"
                android:layout_marginEnd="24dp" apps:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>