<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnvironmentActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainlayout_envi">
        <androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:background="@color/light_blue"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           android:id="@+id/tbEnvi"/>

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           android:layout_marginStart="8dp"
                                           android:layout_marginEnd="8dp"
                                           app:cardElevation="1dp"
                                           app:cardCornerRadius="4dp"
                                           android:layout_marginTop="2dp"
                                           app:layout_constraintTop_toBottomOf="@+id/tbEnvi"
                                           android:id="@+id/cardView">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:text="Chất lượng không khí"
                          android:textStyle="bold"
                          android:textAllCaps="false"
                          android:textColor="@color/light_black"
                          android:textSize="20sp"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Nồng độ khí CO:"
                              android:gravity="center"
                              android:textSize="15sp"/>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:id="@+id/txtCO"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgCO"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Nồng độ khí CO2:"
                              android:gravity="center"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:id="@+id/txtCO2"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgCO2"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Chỉ số PM 1:"
                              android:gravity="center"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:id="@+id/txtPM1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:id="@+id/imgPM1"
                               android:layout_gravity="center"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Chỉ số PM 2.5:"
                              android:gravity="center"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:id="@+id/txtPM25"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgPM25"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Chỉ số PM 10:"
                              android:gravity="center"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:id="@+id/txtPM10"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:id="@+id/imgPM10"
                               android:layout_gravity="center"
                               android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           android:layout_marginStart="8dp"
                                           android:layout_marginEnd="8dp"
                                           app:cardElevation="1dp"
                                           app:cardCornerRadius="4dp"
                                           android:layout_marginTop="8dp"
                                           app:layout_constraintTop_toBottomOf="@+id/cardView"
                                           android:id="@+id/cardView2">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:text="Thông số môi trường"
                          android:textStyle="bold"
                          android:textAllCaps="false"
                          android:textColor="@color/light_black"
                          android:textSize="20sp"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Nhiệt độ:"
                              android:gravity="center"
                              android:textSize="15sp"/>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:id="@+id/txtNhietDo"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgTemp"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Độ ẩm:"
                              android:gravity="center"
                              android:textSize="15sp"/>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:id="@+id/txtDoAm"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgHumi"
                               android:layout_height="30dp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Cường độ ánh sáng:"
                              android:gravity="center"
                              android:textSize="15sp"/>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XXX"
                              android:id="@+id/txtAnhSang"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgLight"
                               android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           android:layout_marginStart="8dp"
                                           android:layout_marginEnd="8dp"
                                           app:cardElevation="1dp"
                                           app:cardCornerRadius="4dp"
                                           android:layout_marginTop="8dp"
                                           app:layout_constraintTop_toBottomOf="@+id/cardView2">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:text="Cảnh báo cháy nổ"
                          android:textStyle="bold"
                          android:textAllCaps="false"
                          android:textColor="@color/light_black"
                          android:textSize="20sp"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Khí ga:"
                              android:gravity="center"
                              android:textSize="15sp"/>
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XX"
                              android:id="@+id/txtKhiGas"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgKhiGas"
                               android:layout_height="30dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:textColor="@color/black"
                              android:text="Lửa:"
                              android:gravity="center"
                              android:textSize="15sp"/>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_marginStart="16dp"
                              android:textColor="@color/black"
                              android:text="XX"
                              android:id="@+id/txtKhoi"
                              android:textSize="15sp"/>
                    <ImageView android:layout_width="30dp"
                               android:src="@drawable/ic_shield"
                               android:layout_gravity="center"
                               android:id="@+id/imgKhoi"
                               android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/fabmenu_envi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/mainlayout_envi"
            app:layout_anchorGravity="right|bottom"
            app:menu_backgroundColor="@android:color/transparent"
            app:menu_fab_label=""
            app:menu_openDirection="up"
            app:menu_showShadow="true"
            app:menu_fab_size="mini"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp">

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabControl_envi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Điều khiển"
                android:src="@drawable/ic_joystick"
                app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabEnvironment_envi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="Môi trường"
                android:src="@drawable/ic_eco_house"
                app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabTao_envi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_label="@string/app_name"
                android:src="@drawable/ic_seaweed_icon"
                app:fab_size="mini"/>


    </com.github.clans.fab.FloatingActionMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>